pipeline {
    agent any
    
    environment {
        VENV = ".venv"
    }
    
    stages {
        stage('Checkout') {
            steps {
                git credentialsId: 'github-creds',
                    url: 'https://github.com/<your-username>/<your-repo>.git',
                    branch: 'main'
            }
        }

        stage('Setup Python Env') {
            steps {
                sh """
                python3 -m venv ${VENV}
                . ${VENV}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh """
                . ${VENV}/bin/activate
                pytest --junitxml=report.xml
                """
            }
            post {
                always {
                    junit 'report.xml'
                }
            }
        }
    }

    triggers {
        // manual trigger only, no SCM polling
    }
}
